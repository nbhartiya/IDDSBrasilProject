<h1>Listing users</h1>

<table>
  <tr>
    <th>User name</th>
    <th>User phone</th>
    <th>Dream</th>
    <th>Dream cost</th>
    <th>Monthly savings</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.user_name %></td>
    <td><%= user.user_phone %></td>
    <td><%= user.dream %></td>
    <td><%= user.dream_cost %></td>
    <td><%= user.monthly_savings %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, confirm: 'Are you sure?', method: :show %></td>
  </tr>
<% end %>
</table>

